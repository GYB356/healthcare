{
  "name": "healthcare-sync",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive healthcare platform with appointment scheduling, patient portal, telemedicine, and HIPAA compliance",
  "main": "server.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test:server": "jest --config=jest.server.config.js",
    "test:client": "cd client && npm test",
    "test:e2e": "cypress run",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "format": "prettier --write .",
    "seed": "node scripts/seed.js",
    "deploy": "npm run build && npm start",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "type-check": "npx tsc --noEmit",
    "type-check:frontend": "npx tsc --noEmit -p ./frontend/tsconfig.json",
    "type-check:backend": "npx tsc --noEmit -p ./backend/tsconfig.json",
    "validate": "npm run lint && npm run type-check"
  },
  "dependencies": {
    "eslint": "^9.21.0",
    "next": "^15.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.15.0",
    "typescript-eslint": "^8.26.0"
  }
}
