# Database configuration moved to .env.secrets
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/healthcare_sync"

JWT_SECRET=healthcare_sync_jwt_secret_key_2024_secure_token
JWT_REFRESH_SECRET=healthcare_sync_refresh_secret_key_2024_secure_token
NEXT_PUBLIC_API_URL=http://localhost:3005/api
FRONTEND_URL=http://localhost:3007
PORT=3005
NODE_ENV="development"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
REDIS_URL="redis://localhost:6379"

# Security
BCRYPT_SALT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30
ENCRYPTION_KEY=your-secure-random-key-here  # Change this in production!

# Two-factor authentication
TWO_FACTOR_ISSUER=HealthcareSync

# Next Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key"

# Email (optional)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@healthcaresync.com"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=
